<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:orientation="vertical"
    android:padding="8dp">


    <ImageView
        android:id="@+id/food_log_item_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="fitXY"
        >
    </ImageView>

    <TextView
        android:id="@+id/food_log_item_log_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_toEndOf="@+id/food_log_item_image"
    />
    <TextView
        android:id="@+id/food_log_item_meal_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/food_log_item_log_name"
        android:layout_marginStart="40dp"
        android:layout_marginTop="6dp"
        android:layout_toEndOf="@+id/food_log_item_image"
         />

    <TextView
        android:id="@+id/food_log_item_date"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginStart="40dp"
        android:layout_below="@+id/food_log_item_meal_name"
        android:layout_toEndOf="@+id/food_log_item_image"
      />


</RelativeLayout>