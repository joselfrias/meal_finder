<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="materialCardViewStyle">@style/CardView.AppTheme</item>
        <item name="colorPrimaryVariant">#4285F4</item>
    </style>

    <style name="CardView.AppTheme" parent="Widget.MaterialComponents.CardView">
        <item name="elevation">8dp</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="fabStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="backgroundTint">?attr/colorPrimaryVariant</item>
    </style>

    <style name="profileButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textAlignment">viewStart</item>
    </style>


</resources>
